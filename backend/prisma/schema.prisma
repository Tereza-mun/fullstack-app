datasource db {
provider = "postgresql"
url = env("DATABASE_URL")
}


generator client {
provider = "prisma-client-js"
}


model Product {
id Int @id @default(autoincrement())
name Json
price Float
category String @default("accessories")
imageUrl String?
createdAt DateTime @default(now())
}

model Order {
id Int @id @default(autoincrement())
customerName String
customerEmail String
phone String?
address String?
city String?
postalCode String?
country String?
notes String?
deliveryMethod String @default("delivery")
paymentMethod String @default("cash")
totalPrice Float
status String @default("pending")
items OrderItem[]
createdAt DateTime @default(now())
}

model OrderItem {
id Int @id @default(autoincrement())
orderId Int
order Order @relation(fields: [orderId], references: [id])
productId Int
productName Json
productPrice Float
quantity Int
}